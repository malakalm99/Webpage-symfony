        </header>

        <nav class="navbar">
            <ul>
                <li><a href="{{ path('home') }}">Home</a></li>
                <li><a href="{{ path('about') }}">About</a></li>
                <li><a href="{{ path('report') }}">Report</a></li>                
                <li><a href="{{ path('lucky') }}">Lucky</a></li>
            </ul>
        </nav>

        {% block body %}{% endblock %}
        
        <footer>
            <div class="footer">
                <p> Copyright © 2025 Malak Alm</p>
            </div>
            <div class="social">
                <a href="https://github.com/malakalm99?tab=repositories" target="_blank"><i class="fa fa-github"></i></a>
                <a href="https://dbwebb.se/kurser/mvc-v2" target="_blank"><i class="fa fa-university"></i></a>
            </div>
        </footer>
    </body>
</html>
